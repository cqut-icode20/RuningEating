<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.icode20.runningeating.global.mapper.GlobalMapper">
<!--    用户表结果集映射-->
    <resultMap id="findUser" type="User">
        <result column="m_password" property="password"/>
        <result column="m_index" property="index"/>
    </resultMap>

    <insert id="insertUser">
        insert into user(id,username ,m_password,email)
        values (replace(uuid(),'-',''),#{name}, #{password},#{email})
    </insert>

    <select id="findUserByName"  resultType="User" resultMap="findUser">
        select *
        from user
        where username = #{name}
    </select>
</mapper>
